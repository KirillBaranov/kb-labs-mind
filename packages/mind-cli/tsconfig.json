{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["../../tsconfig.base.json", "../../tsconfig.paths.json"],
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "src",
    "jsx": "react-jsx",
    "paths": {
      "@app/shared": ["src/shared/index.ts"],
      "@app/shared/*": ["src/shared/*"],
      "@app/domain": ["src/domain/index.ts"],
      "@app/domain/*": ["src/domain/*"],
      "@app/application": ["src/application/index.ts"],
      "@app/application/*": ["src/application/*"],
      "@app/rest": ["src/rest/index.ts"],
      "@app/rest/*": ["src/rest/*"],
      "@app/infra": ["src/infra/index.ts"],
      "@app/infra/*": ["src/infra/*"],
      "@app/studio": ["src/studio/index.ts"],
      "@app/studio/*": ["src/studio/*"],
      "@app/cli": ["src/cli/index.ts"],
      "@app/cli/*": ["src/cli/*"],
      "@kb-labs/mind-contracts": ["../mind-contracts/src/index.ts"],
      "@kb-labs/mind-contracts/*": ["../mind-contracts/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/__tests__/**"]
}
