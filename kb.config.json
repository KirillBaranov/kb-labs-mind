{
  "knowledge": {
    "sources": [
      {
        "id": "test-source",
        "type": "filesystem",
        "kind": "code",
        "paths": [
          "packages/**/*.{ts,tsx,js,jsx}",
          "src/**/*.{ts,tsx,js,jsx}"
        ],
        "exclude": [
          "**/node_modules/**",
          "**/.git/**",
          "**/dist/**",
          "**/build/**",
          "**/coverage/**",
          "**/*.min.js",
          "**/*.bundle.js",
          "**/*.d.ts",
          "**/__tests__/**",
          "**/*.test.{ts,tsx,js,jsx}",
          "**/*.spec.{ts,tsx,js,jsx}",
          "**/fixtures/**",
          "**/.ignored/**"
        ]
      }
    ],
    "scopes": [
      {
        "id": "test-scope",
        "name": "Test Scope",
        "description": "Test scope for synchronization",
        "sources": ["test-source"]
      }
    ],
    "engines": [
      {
        "id": "mind-engine",
        "type": "mind",
        "scopes": ["test-scope"]
      }
    ]
  },
  "mind": {
    "sync": {
      "registry": {
        "type": "filesystem",
        "path": ".kb/mind/sync/registry.json"
      },
      "softDelete": {
        "enabled": true,
        "ttlDays": 30
      },
      "partialUpdates": {
        "enabled": true
      },
      "batch": {
        "maxSize": 100
      }
    }
  },
  "platform": {
    "adapterOptions": {
      "llm": {
        "executionDefaults": {
          "cache": {
            "mode": "prefer",
            "scope": "segments",
            "ttlSec": 3600
          },
          "stream": {
            "mode": "prefer",
            "fallbackToComplete": true
          }
        }
      }
    }
  }
}
